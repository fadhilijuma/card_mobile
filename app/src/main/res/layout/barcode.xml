<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ad_page05"
    android:orientation="vertical">

    <TextView
        android:id="@+id/show_state"
        style="@style/whatsnew_Txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="58dp"
        android:text="Scan the Receipt..." />

    <TextView
        android:id="@+id/scandata"
        style="@style/whatsnew_Txt"
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:background="@color/white"
        android:focusable="true"
        android:paddingTop="8dp"
        android:scrollbars="vertical"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/scan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="160dp"
        android:background="#029BD9"
        android:text="Scan Receipt"
        android:onClick="codescan"
        android:textSize="17sp"
        android:textColor="#fff" />


</LinearLayout>